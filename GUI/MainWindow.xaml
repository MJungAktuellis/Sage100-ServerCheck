<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sage 100 Server Check - Management Console" 
        Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Moderne Farben -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#0078D4"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#28A745"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FFC107"/>
        <SolidColorBrush x:Key="DangerColor" Color="#DC3545"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#6C757D"/>
        <SolidColorBrush x:Key="LightGray" Color="#E9ECEF"/>
        
        <!-- Button-Stil -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Tab-Stil -->
        <Style x:Key="ModernTab" TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="#E9ECEF" 
                                BorderThickness="0,0,0,3" 
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}"
                                Margin="2,0">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#DEE2E6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card-Stil -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    BlurRadius="10" 
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ–¥ï¸ Sage 100 Server Check" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Name="StatusText" 
                             Text="Management Console" 
                             FontSize="14" 
                             Foreground="#E9ECEF" 
                             Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Server:" 
                             Foreground="White" 
                             FontSize="14" 
                             Margin="0,0,10,0" 
                             VerticalAlignment="Center"/>
                    <TextBlock Name="ServerNameText" 
                             Text="localhost" 
                             Foreground="White" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" 
                    Margin="0" 
                    BorderThickness="0" 
                    Background="Transparent">
            
            <!-- Tab 1: Dashboard -->
            <TabItem Header="ðŸ“Š Dashboard" Style="{StaticResource ModernTab}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        
                        <!-- Quick Actions -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Quick Actions" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <WrapPanel>
                                    <Button Name="RunCheckButton" 
                                          Content="â–¶ Server Check ausfÃ¼hren" 
                                          Style="{StaticResource ModernButton}" 
                                          Margin="0,0,10,0"/>
                                    <Button Name="ViewReportsButton" 
                                          Content="ðŸ“„ Reports anzeigen" 
                                          Style="{StaticResource ModernButton}" 
                                          Background="{StaticResource SecondaryColor}" 
                                          Margin="0,0,10,0"/>
                                    <Button Name="RefreshButton" 
                                          Content="ðŸ”„ Aktualisieren" 
                                          Style="{StaticResource ModernButton}" 
                                          Background="{StaticResource SecondaryColor}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Status Overview -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Aktueller Status" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- SQL Server Card -->
                                    <Border Grid.Column="0" 
                                          Background="{StaticResource LightGray}" 
                                          CornerRadius="6" 
                                          Padding="15" 
                                          Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="SQL Server" 
                                                     FontSize="14" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="{StaticResource SecondaryColor}"/>
                                            <TextBlock Name="SqlStatusText" 
                                                     Text="â³ Warte..." 
                                                     FontSize="20" 
                                                     FontWeight="Bold" 
                                                     Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Services Card -->
                                    <Border Grid.Column="1" 
                                          Background="{StaticResource LightGray}" 
                                          CornerRadius="6" 
                                          Padding="15" 
                                          Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="Sage Services" 
                                                     FontSize="14" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="{StaticResource SecondaryColor}"/>
                                            <TextBlock Name="ServicesStatusText" 
                                                     Text="â³ Warte..." 
                                                     FontSize="20" 
                                                     FontWeight="Bold" 
                                                     Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Disk Space Card -->
                                    <Border Grid.Column="2" 
                                          Background="{StaticResource LightGray}" 
                                          CornerRadius="6" 
                                          Padding="15" 
                                          Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="Speicherplatz" 
                                                     FontSize="14" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="{StaticResource SecondaryColor}"/>
                                            <TextBlock Name="DiskStatusText" 
                                                     Text="â³ Warte..." 
                                                     FontSize="20" 
                                                     FontWeight="Bold" 
                                                     Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Network Card -->
                                    <Border Grid.Column="3" 
                                          Background="{StaticResource LightGray}" 
                                          CornerRadius="6" 
                                          Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Netzwerk" 
                                                     FontSize="14" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="{StaticResource SecondaryColor}"/>
                                            <TextBlock Name="NetworkStatusText" 
                                                     Text="â³ Warte..." 
                                                     FontSize="20" 
                                                     FontWeight="Bold" 
                                                     Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Check Results -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Letzte Check-Ergebnisse" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <DataGrid Name="ResultsDataGrid" 
                                        AutoGenerateColumns="False" 
                                        Height="300" 
                                        IsReadOnly="True"
                                        GridLinesVisibility="None"
                                        HeadersVisibility="Column"
                                        Background="White"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource LightGray}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Check" Binding="{Binding CheckName}" Width="200"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                        <DataGridTextColumn Header="Dauer (ms)" Binding="{Binding Duration}" Width="100"/>
                                        <DataGridTextColumn Header="Fehlercode" Binding="{Binding ErrorCode}" Width="100"/>
                                        <DataGridTextColumn Header="Details" Binding="{Binding DetailsText}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Performance Metrics -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Performance-Metriken" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <TextBlock Text="Gesamtdauer" FontSize="12" Foreground="{StaticResource SecondaryColor}"/>
                                        <TextBlock Name="TotalDurationText" Text="0 ms" FontSize="24" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                        <TextBlock Text="Durchschnitt" FontSize="12" Foreground="{StaticResource SecondaryColor}"/>
                                        <TextBlock Name="AvgDurationText" Text="0 ms" FontSize="24" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Erfolgsquote" FontSize="12" Foreground="{StaticResource SecondaryColor}"/>
                                        <TextBlock Name="SuccessRateText" Text="0%" FontSize="24" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 2: Konfiguration -->
            <TabItem Header="âš™ï¸ Konfiguration" Style="{StaticResource ModernTab}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        
                        <!-- SQL Server Config -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="SQL Server Konfiguration" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Server Name:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Name="SqlServerNameBox" Grid.Row="0" Grid.Column="1" Padding="8" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Service Name:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Name="SqlServiceNameBox" Grid.Row="1" Grid.Column="1" Padding="8" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Datenbanken:" VerticalAlignment="Top" Margin="0,8,0,0"/>
                                    <TextBox Name="DatabasesBox" Grid.Row="2" Grid.Column="1" 
                                           Padding="8" 
                                           Height="80" 
                                           TextWrapping="Wrap" 
                                           AcceptsReturn="True" 
                                           VerticalScrollBarVisibility="Auto"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Services Config -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Sage Services" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <TextBox Name="ServicesBox" 
                                       Padding="8" 
                                       Height="120" 
                                       TextWrapping="Wrap" 
                                       AcceptsReturn="True" 
                                       VerticalScrollBarVisibility="Auto"/>
                                <TextBlock Text="Ein Service pro Zeile" 
                                         FontSize="11" 
                                         Foreground="{StaticResource SecondaryColor}" 
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Disk Space Config -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Speicherplatz-Schwellenwerte" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Warnung bei weniger als:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Name="MinFreePercentBox" Grid.Row="0" Grid.Column="1" Padding="8" Margin="0,0,10,10"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="% freier Speicher" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Kritisch bei weniger als:" VerticalAlignment="Center"/>
                                    <TextBox Name="CriticalPercentBox" Grid.Row="1" Grid.Column="1" Padding="8" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="% freier Speicher" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- E-Mail Config -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="E-Mail-Benachrichtigungen" 
                                             FontSize="18" 
                                             FontWeight="Bold" 
                                             VerticalAlignment="Center"/>
                                    <CheckBox Name="EmailEnabledCheckbox" 
                                            Content="Aktiviert" 
                                            Margin="20,0,0,0" 
                                            VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="SMTP Server:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Name="SmtpServerBox" Grid.Row="0" Grid.Column="1" Padding="8" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Name="SmtpPortBox" Grid.Row="1" Grid.Column="1" Padding="8" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Von:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Name="EmailFromBox" Grid.Row="2" Grid.Column="1" Padding="8" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="An:" VerticalAlignment="Top" Margin="0,8,0,10"/>
                                    <TextBox Name="EmailToBox" Grid.Row="3" Grid.Column="1" 
                                           Padding="8" 
                                           Height="60" 
                                           TextWrapping="Wrap" 
                                           AcceptsReturn="True" 
                                           VerticalScrollBarVisibility="Auto"
                                           Margin="0,0,0,10"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="" />
                                    <CheckBox Name="SendOnlyOnErrorCheckbox" 
                                            Grid.Row="4" 
                                            Grid.Column="1" 
                                            Content="Nur bei Fehlern senden" 
                                            VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Save Button -->
                        <Button Name="SaveConfigButton" 
                              Content="ðŸ’¾ Konfiguration speichern" 
                              Style="{StaticResource ModernButton}" 
                              Background="{StaticResource SuccessColor}" 
                              HorizontalAlignment="Left" 
                              Padding="30,12"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 3: Installation -->
            <TabItem Header="ðŸ“¦ Installation" Style="{StaticResource ModernTab}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        
                        <!-- Installation Path -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Installationspfad" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Name="InstallPathBox" 
                                           Grid.Column="0" 
                                           Text="C:\Program Files\Sage100-ServerCheck" 
                                           Padding="8" 
                                           IsReadOnly="True" 
                                           Margin="0,0,10,0"/>
                                    <Button Name="BrowsePathButton" 
                                          Grid.Column="1" 
                                          Content="ðŸ“ Durchsuchen" 
                                          Style="{StaticResource ModernButton}" 
                                          Background="{StaticResource SecondaryColor}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Installation Options -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Installations-Optionen" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <CheckBox Name="CreateScheduledTaskCheckbox" 
                                        Content="Automatischen Task erstellen (alle 30 Minuten)" 
                                        Margin="0,0,0,10"/>
                                <CheckBox Name="CreateDesktopShortcutCheckbox" 
                                        Content="Desktop-VerknÃ¼pfung erstellen" 
                                        Margin="0,0,0,10"/>
                                <CheckBox Name="AutoStartCheckbox" 
                                        Content="Bei Windows-Start automatisch ausfÃ¼hren"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Installation Progress -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Installation" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <ProgressBar Name="InstallProgressBar" 
                                           Height="30" 
                                           Minimum="0" 
                                           Maximum="100" 
                                           Value="0" 
                                           Margin="0,0,0,10"/>
                                
                                <TextBlock Name="InstallStatusText" 
                                         Text="Bereit zur Installation" 
                                         Foreground="{StaticResource SecondaryColor}" 
                                         Margin="0,0,0,15"/>
                                
                                <Button Name="InstallButton" 
                                      Content="ðŸš€ Installation starten" 
                                      Style="{StaticResource ModernButton}" 
                                      Background="{StaticResource SuccessColor}" 
                                      Padding="30,12" 
                                      HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Installation Log -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Installations-Log" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,15"/>
                                
                                <TextBox Name="InstallLogBox" 
                                       Height="200" 
                                       TextWrapping="Wrap" 
                                       VerticalScrollBarVisibility="Auto" 
                                       IsReadOnly="True" 
                                       FontFamily="Consolas" 
                                       Background="#F8F9FA" 
                                       Padding="10"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 4: Logs -->
            <TabItem Header="ðŸ“‹ Logs" Style="{StaticResource ModernTab}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Style="{StaticResource Card}">
                        <StackPanel Orientation="Horizontal">
                            <Button Name="RefreshLogsButton" 
                                  Content="ðŸ”„ Aktualisieren" 
                                  Style="{StaticResource ModernButton}" 
                                  Background="{StaticResource SecondaryColor}" 
                                  Margin="0,0,10,0"/>
                            <Button Name="OpenLogFolderButton" 
                                  Content="ðŸ“ Log-Ordner Ã¶ffnen" 
                                  Style="{StaticResource ModernButton}" 
                                  Background="{StaticResource SecondaryColor}" 
                                  Margin="0,0,10,0"/>
                            <Button Name="ClearLogsButton" 
                                  Content="ðŸ—‘ï¸ Alte Logs lÃ¶schen" 
                                  Style="{StaticResource ModernButton}" 
                                  Background="{StaticResource DangerColor}"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Row="1" Style="{StaticResource Card}">
                        <TextBox Name="LogViewerBox" 
                               TextWrapping="Wrap" 
                               VerticalScrollBarVisibility="Auto" 
                               IsReadOnly="True" 
                               FontFamily="Consolas" 
                               FontSize="12" 
                               Background="#F8F9FA" 
                               Padding="10"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#343A40" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                         Name="FooterStatusText" 
                         Text="Bereit" 
                         Foreground="White" 
                         VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                         Text="v2.0 | Â© 2026 Sage100-ServerCheck" 
                         Foreground="#ADB5BD" 
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
